    function NavBar() {
      const scrollToSection = (id) => {
        document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
      };

      return (
        <nav className="fixed top-0 left-0 w-full bg-blue-800 text-white shadow-lg z-10">
          <div className="max-w-4xl mx-auto px-4 py-3 flex flex-wrap items-center justify-between">
            <div className="flex items-center">
              <svg className="w-6 h-6 mr-2 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10 2a8 8 0 100 16 8 8 0 000-16zm0 14a6 6 0 110-12 6 6 0 010 12zm-1-6h2v4H9v-4zm0-2h2v2H9V8z"/>
              </svg>
              <span className="text-xl font-bold">Semaine Acadienne 2025</span>
            </div>
            <div className="flex flex-wrap gap-2 mt-2 sm:mt-0">
              {data.map((day, index) => (
                <button
                  key={index}
                  onClick={() => scrollToSection(`day-${index}`)}
                  className="px-3 py-1 rounded-md bg-blue-600 hover:bg-blue-500 text-sm transition-colors"
                >
                  {day.date.split(' ')[0]}
                </button>
              ))}
              <button
                onClick={() => scrollToSection('timeline')}
                className="px-3 py-1 rounded-md bg-red-600 hover:bg-red-500 text-sm transition-colors"
              >
                Frise
              </button>
            </div>
          </div>
        </nav>
      );
    }

    function DayCard({ day, index }) {
      const [isOpen, setIsOpen] = useState(false);

      return (
        <div id={`day-${index}`} className="bg-white shadow-lg rounded-xl mb-6 p-6 fade-in">
          <button
            className="w-full text-left text-xl font-bold text-blue-800 flex justify-between items-center hover:text-blue-600 transition-colors"
            onClick={() => setIsOpen(!isOpen)}
          >
            <span>{day.date}</span>
            <svg className={`w-6 h-6 transform transition-transform ${isOpen ? 'rotate-180' : ''}`} fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          {isOpen && (
            <div className="mt-4">
              <h3 className="text-lg font-semibold text-gray-800 flex items-center">
                <span className="mr-2">🌅</span> Météo
              </h3>
              <p className="text-gray-600"><strong>Matin :</strong> {day.weather.morning}</p>
              <p className="text-gray-600"><strong>Après-midi :</strong> {day.weather.afternoon}</p>
              <p className="text-yellow-600 italic">{day.weather.comment}</p>
              <p className="text-gray-600"><strong>Conseil :</strong> {day.weather.tip}</p>

              <h3 className="text-lg font-semibold text-gray-800 mt-4 flex items-center">
                <span className="mr-2">🌊</span> Marées
              </h3>
              <p className="text-gray-600"><strong>Marée haute :</strong> {day.tides.high}</p>
              <p className="text-gray-600"><strong>Marée basse :</strong> {day.tides.low}</p>

              <h3 className="text-lg font-semibold text-gray-800 mt-4 flex items-center">
                <span className="mr-2">🍽️</span> Groupes de repas
              </h3>
              <div className="grid grid-cols-1 sm:grid-cols-3 gap-2">
                {day.groups.map((group, i) => (
                  <p key={i} className="text-gray-600 bg-gray-100 p-2 rounded-md" dangerouslySetInnerHTML={{ __html: group }}></p>
                ))}
              </div>

              <h3 className="text-lg font-semibold text-gray-800 mt-4 flex items-center">
                <span className="mr-2">🎶</span> Programme
              </h3>
              <ul className="list-disc pl-5 text-gray-600">
                {day.program.map((event, i) => (
                  <li key={i}>{event}</li>
                ))}
              </ul>

              <h3 className="text-lg font-semibold text-gray-800 mt-4 flex items-center">
                <span className="mr-2">⭐</span> Fun fact acadien
              </h3>
              <p className="text-gray-600">{day.funFact}</p>

              <h3 className="text-lg font-semibold text-gray-800 mt-4 flex items-center">
                <span className="mr-2">❓</span> Défi familial
              </h3>
              <p className="text-gray-600">{day.challenge}</p>
            </div>
          )}
        </div>
      );
    }

    function TimelineCard({ event, index }) {
      return (
        <div className="flex mb-8 relative">
          <div className="w-1/4 text-right pr-4">
            <h3 className="text-lg font-bold text-red-600">{event.year}</h3>
          </div>
          <div className="w-3/4 pl-6 relative">
            <div className="absolute left-0 top-0 w-4 h-4 bg-yellow-400 rounded-full -ml-2 mt-1"></div>
            <div className="absolute left-0 top-4 bottom-0 w-1 bg-blue-500 -ml-1"></div>
            <h4 className="text-md font-semibold text-blue-800">{event.title}</h4>
            <p className="text-sm text-gray-600">{event.description}</p>
          </div>
        </div>
      );
    }

    function App() {
      const [allOpen, setAllOpen] = useState(false);

      const toggleAll = () => {
        setAllOpen(!allOpen);
        document.querySelectorAll('.day-card button').forEach(button => {
          button.click();
        });
      };

      return (
        <div className="max-w-4xl mx-auto pt-20 pb-10 px-4">
          <NavBar />
          <div className="text-center mb-8">
            <h1 className="text-4xl font-bold text-blue-800 flex items-center justify-center">
              <span className="mr-2">🌞</span> Semaine Acadienne 2025
            </h1>
            <p className="text-gray-600 mt-2">Programme, repas, marées, fun facts et histoire acadienne à Courseulles-sur-Mer !</p>
            <button
              onClick={toggleAll}
              className="mt-4 px-4 py-2 bg-yellow-400 text-blue-800 rounded-md hover:bg-yellow-300 transition-colors"
            >
              {allOpen ? 'Tout réduire' : 'Tout déplier'}
            </button>
          </div>

          <h2 className="text-2xl font-semibold text-blue-800 mb-6">Programme quotidien</h2>
          {data.map((day, index) => (
            <DayCard key={index} day={day} index={index} />
          ))}

          <h2 id="timeline" className="text-2xl font-semibold text-blue-800 mt-10 mb-6">📜 Frise chronologique acadienne</h2>
          <div className="bg-white shadow-lg rounded-xl p-6">
            {timeline.map((event, index) => (
              <TimelineCard key={index} event={event} index={index} />
            ))}
          </div>
        </div>
      );
    }

    ReactDOM.render(<App />, document.getElementById('root'));
  </script>
</body>
</html>
